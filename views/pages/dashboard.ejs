<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">
    <header>
        <%- include('../partials/header'); %>
        <!-- 
            Exemplo de uso das variáveis de sessão para controle da renderização
            da página HTML. No app.js é necessário passar este parâmetro para ser
            processado aqui pelo EJS
        -->
        <% if(req.session.loggedin) { %>
        <%- include('../partials/menu_dashboard'); %>
        <% } %>
    </header>

    <main style="max-height: 30%;">
        <div>
            <div>
                <p>
                    <%= req.session.username %> você está em seu perfil.
                </p>
                <p>Se quiser faça <a href="/logout">logout</a> ou navegue em suas opções.</p>
            </div>
        </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>